---
import Layout from "./Layout.astro";
import BackBtn from "../components/BackBtn.astro";
import { fade } from "astro:transitions";
import { slide } from "astro:transitions";

interface Props {
  heading: string;
  bg: string;
  color: string;
  transitionName: string;
  clipBg?: string;
}

const { heading, transitionName, bg, clipBg, color } = Astro.props;
---

<main class="clip-bg">
  <!-- <BackBtn /> -->
  <div class="grid">
    <div class="heading-container">
      <h1
        transition:animate={slide({ duration: "1s" })}
        transition:name={`card-title-${transitionName}`}
      >
        {heading}<span class="dot">.</span>
      </h1>
    </div>
    <slot />
  </div>
</main>

<style define:vars={{ clipBg, bg, color }}>
  .dot {
    color: var(--color-3);
    animation: hueRotate 5s infinite;
    font-family: Inter, sans-serif;
  }
  main {
    overflow: clip;
  }
  .clip-bg {
    background-color: var(--clipBg);
    position: relative;
  }

  .grid {
    background-color: var(--bg);
    color: var(--color-3);
    color: var(--color);
    width: min(100%, 1500px);
    margin-inline: auto;
    display: grid;
    height: 100vh;
    /* grid-auto-rows: max-content; */
    /* gap: 2rem; */
    /* -webkit-mask: var(--mask-edge-zig-zag-right); */

    @media (min-width: 700px) {
      /* grid-auto-rows: auto; */
      grid-template-columns: minmax(160px, 250px) 250px 1fr minmax(200px, 1fr);
    }
  }

  .heading-container {
    position: relative;
    /* width: 100%; */
    height: 100%;
    overflow: hidden;
    z-index: 100;
    background-color: var(--color-8);
    /* -webkit-mask: var(--mask-edge-zig-zag-right); */
    background: url("./images/andy-wang.avif");
    background: url("./images/coffee/esplabels.avif");
    background-position: center;
    background-color: var(--color-brand-2);
    /* background-color: var(--color-4-dark); */
    background-blend-mode: luminosity;
    background-blend-mode: difference;
  }
  h1 {
    /* animation: hueRotate 15s infinite; */

    font-size: min(15rem, 1rem + 20vw);
    z-index: 12;
    /* padding-top: 2rem; */
    @media (min-width: 700px) {
      padding-top: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      white-space: nowrap;
      transform: translate(-50%, -50%) rotate(270deg);
    }
  }
</style>
