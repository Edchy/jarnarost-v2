          colorIntensity={0.2}
          speed={0.3}
          chaos={0.5}
        /> -->
      <!-- <Shader2
      width="300px"
      height="300px"
      imageUrl="/fail.jpg"
      colorIntensity={1.2}
      speed={0.5}
      chaos={1.0}
    /> -->
    </div>
    <!-- <SlantedGridGallery /> -->
  </Main>
</Layout>
<style>
  .shader-container {
    position: relative;
    & h2 {
      font-size: var(--size-fluid-4);
      color: var(--color-brand-2);
      position: absolute;
      z-index: 10;
      pointer-events: none;
      @media (min-width: 700px) {
        top: 50%;
        left: 50%;
        transform: translateX(-50%) rotate(-90deg);
      }
    }
    & span {
      display: block;
    }
  }
  .grid {
    position: relative;
    display: grid;
