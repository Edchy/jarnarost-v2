---
import Main from "../layouts/Main.astro";
import Layout from "../layouts/Layout.astro";
import Showcase from "../components/Showcase.astro";
import Carousel from "../components/Carousel.astro";
import Carousels from "../components/Carousels.astro";
import WordCarousel from "../components/WordCarousel.astro";
import SlantedGridGallery from "../components/SlantedGridGallery.astro";
import Shader from "../components/Shader.astro";
import Shader2 from "../components/Shader2.astro";
import Shader3 from "../components/Shader3.astro";
---

<Layout>
  <Main
    heading="kaffet"
    color="var(--color-light)"
    clipBg="var(--color-dark)"
    bg="var(--color-4-dark)"
    transitionName="image-1"
  >
    <div class="grid">
      <!-- <WordCarousel /> -->
      <Carousel />
      <div class="shader-container">
        <h2><span>EKOLOGISKT</span><span>BIODYNAMISKT</span></h2>
        <Shader
          colorIntensity={1}
          speed={0.4}
          rippleIntensity={0.2}
          width="100%"
          height="100%"
        />
      </div>
      <!-- <Shader3
          width="100%"
          height="100vh"
