    heading="kaffet"
    color="var(--color-light)"
    clipBg="var(--color-brand-2)"
    bg="var(--color-4-dark)"
    transitionName="image-1"
  >
    <div class="grid">
      <div class="carousel-container">
        <Carousel />
      </div>
      <WordCarousel />
      <div class="shader-container">
